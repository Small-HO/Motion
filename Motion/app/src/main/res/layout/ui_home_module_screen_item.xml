<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_screen_item"
    android:layout_marginTop="@dimen/dp_1"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="@dimen/dp_10" android:background="@color/colorWhite"
    >

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginEnd="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toEndOf="@+id/iv_img"
        android:layout_alignTop="@+id/iv_img"
        />

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/iv_img"

        android:layout_below="@+id/tv_title"
        android:layout_above="@+id/tv_current_price"
        />

    <TextView
        android:id="@+id/tv_current_price"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorQk"
        android:textSize="@dimen/sp_16"

        android:layout_toEndOf="@+id/iv_img"
        android:layout_alignBottom="@+id/iv_img"
        />

    <TextView
        android:id="@+id/tv_original_price"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/colorGradeRecipe"
        android:textSize="@dimen/sp_14"

        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_current_price"
        android:layout_alignBottom="@+id/iv_img"
        />


</RelativeLayout>