<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/white_yi"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_coach_detail"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="@dimen/dp_200" />
    <TextView
        android:id="@+id/tv_coach_detail_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游泳馆(万达广场店)"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:drawableLeft="@mipmap/lan"
        android:drawablePadding="@dimen/dp_5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="面积"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/tv_coach_detail_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300平方米"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="12sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数"
            android:textSize="@dimen/sp_12"/>
        <TextView
            android:id="@+id/tv_coach_detail_capac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80人"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>
