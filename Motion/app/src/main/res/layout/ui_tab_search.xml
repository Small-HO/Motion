<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_80"
    android:background="@color/colorWhite" android:fitsSystemWindows="true"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/back_black"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_toEndOf="@+id/iv_back"
        android:layout_toStartOf="@+id/ll_ok"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_search_item_bg"
        >

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:drawableStart="@mipmap/search"
            android:drawablePadding="@dimen/dp_5"
            android:hint="@string/tv_hint_sport"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@null"
            android:textSize="@dimen/sp_13"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_ok"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_button_ok"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_15"
            />

        <TextView
            android:layout_width="@dimen/dp_23"
            android:layout_height="@dimen/dp_23"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@mipmap/red_yuan_bg"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>