<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:orientation="vertical"
        android:background="@drawable/ic_data_module_bg">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10">

            <View
                android:id="@+id/v_module_line_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_recipe_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30-45"
                android:textColor="@color/colorGradeData"
                android:gravity="center"
                android:textSize="@dimen/sp_24"
                android:layout_toStartOf="@+id/v_module_line_1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间"
                android:gravity="center"
                android:textColor="@color/colorGradeRecipe"
                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/tv_recipe_data"
                android:layout_toStartOf="@+id/v_module_line_1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3次周"
                android:textColor="@color/colorGradeData"
                android:gravity="center"
                android:textSize="@dimen/sp_24"
                android:layout_toEndOf="@+id/v_module_line_1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="频率"
                android:gravity="center"
                android:textColor="@color/colorGradeRecipe"
                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/tv_recipe_data"
                android:layout_toEndOf="@+id/v_module_line_1"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_below="@+id/rl_1"
            >

            <View
                android:id="@+id/v_module_line_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_recipe_hrrest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30-45"
                android:textColor="@color/colorGradeData"
                android:gravity="center"
                android:textSize="@dimen/sp_24"
                android:layout_toStartOf="@+id/v_module_line_2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="心率"
                android:gravity="center"
                android:textColor="@color/colorGradeRecipe"
                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/tv_recipe_hrrest"
                android:layout_toStartOf="@+id/v_module_line_2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="有氧"
                android:textColor="@color/colorGradeData"
                android:gravity="center"
                android:textSize="@dimen/sp_24"
                android:layout_toEndOf="@+id/v_module_line_2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="方式"
                android:gravity="center"
                android:textColor="@color/colorGradeRecipe"
                android:textSize="@dimen/sp_14"
                android:layout_below="@+id/tv_recipe_hrrest"
                android:layout_toEndOf="@+id/v_module_line_2"
                />


        </RelativeLayout>


    </RelativeLayout>

</merge>