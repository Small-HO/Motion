<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl_inspect_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_inspect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/colorXiaohao"
            android:text="测试标题"
            />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="@dimen/dp_10"
            android:src="@mipmap/downla"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="@dimen/sp_14"
        android:background="@color/colorWhite"
        android:padding="@dimen/dp_10"
        />

    <TextView
        android:id="@+id/tv_disease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="@dimen/sp_14"
        android:background="@color/colorWhite"
        android:padding="@dimen/dp_10"
        />

</LinearLayout>