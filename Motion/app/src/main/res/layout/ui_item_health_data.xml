<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:layout_margin="@dimen/dp_10" android:background="@color/colorWhite"
    >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_14"
        android:layout_margin="@dimen/dp_10"
        android:textColor="@color/colorGradeData"
        />

    <com.shaoyuan.motion.ui.view.ProgressView
        android:id="@+id/progress_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_10"
        android:layout_toEndOf="@+id/tv_name"
        android:layout_toStartOf="@+id/tv_percent"
        />

    <TextView
        android:id="@+id/tv_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>